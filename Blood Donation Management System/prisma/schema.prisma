generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"

}

model Donor {
  id             String    @id @default(uuid())
  fullName       String
  email          String    @unique
  phone          String
  bloodType      String
  birthDate      DateTime?
  age            Int?
  medicalCondition String?
  profilePicture String?
  
  // Detailed Location
  region         String?
  city           String?
  subCity        String?
  woreda         String?
  kebele         String?
  street         String?
  homeNumber     String?

  lotteryId      String?
  status         String    @default("Active")

  lastDonation   DateTime?
  availability   String?   @default("ready")
  totalDonations Int       @default(0)
  impactScore    Int       @default(0)
  donations      Donation[]
  
  // Auth
  username       String?   @unique
  password       String?
  
  status         String    @default("Pending")
  rejectionReason String?

model Hospital {
  id        String    @id @default(uuid())
  name      String
  email     String    @unique
  phone     String
  
  // Contact
  contactDoctorName  String?
  contactDoctorPhone String?
  
  // Location
  region    String?
  city      String?
  subCity   String?
  woreda    String?
  kebele    String?
  street    String?
  
  // License & Type
  licenseName   String?
  licenseNumber String?
  hospitalType  String? // 'Government Hospital' | 'Non-Government Hospital'
  
  // Auth
  username      String?   @unique
  password      String?
  
  profilePicture String?
  status         String @default("Pending") // Pending approval
  rejectionReason String?
  
  requests  Request[]
  donations Donation[]
}

model Request {
  id          String   @id @default(uuid())
  hospital    Hospital @relation(fields: [hospitalId], references: [id])
  hospitalId  String
  patient     String?
  bloodType   String
  urgency     String
  unitsNeeded Int
  status      String
  requestedAt DateTime @default(now())
}

model Donation {
  id           String   @id @default(uuid())
  donor        Donor    @relation(fields: [donorId], references: [id])
  donorId      String
  hospital     Hospital @relation(fields: [hospitalId], references: [id])
  hospitalId   String
  units        Int
  donationDate DateTime @default(now())
  status       String
}

model Inventory {
  id                String   @id @default(uuid())
  bloodType         String
  unitsAvailable    Int
  criticalThreshold Int
  lastUpdated       DateTime @default(now())
}